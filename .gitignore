#include <iostream>
#include <cmath>
#define M_PI 3.14

using namespace std;

//вариант 8

int main() {
	double x;
	cout << "Enter x: ";
	cin >> x;
     
	double y, f;
	double a = 5.2, b = 8.13, c = 7.71;
	y = (x - a) / (b - c);
	if (y < -1) 
		f = (x + 1) / (y - 1);
	else
		if ((y >= -1) && (y < 1)) 
			f = 5.2 * (M_PI)*y;
		else
			if (y >= 1)
				f = (x - 1) / (y + 1);

	cout << "f = " << f << "\n";
}
